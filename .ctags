# Basic options
--recurse=yes
--tag-relative=yes
--exclude=.svn
--exclude=.git
--exclude=log
--exclude=*.min.js
--exclude=cache
--exclude=*.md
--exclude="*/_*cache/*"
--exclude="*/_*logs{0,1}/*"
--exclude="*/_*data/*"
--PHP-kinds=+cf
--regex-PHP=/abstract class ([^ ]*)/\1/c/
--regex-PHP=/interface ([^ ]*)/\1/c/
--regex-PHP=/trait ([^ ]*)/\1/c/
--regex-PHP=/(public |static |abstract |protected |private )+ function +([^ \(]*)/\2/f/
